---
import { SITE_DATA } from '../config';
import Icon from './Icon.astro';

const navLinks = [
  { href: '/services', text: 'Servicios' },
  { href: '/about', text: 'Nosotros' },
  { href: '/contact', text: 'Contacto' },
];

const socialLinks = [
  { href: `https://wa.me/${SITE_DATA.whatsappNumber}`, icon: 'whatsapp', pack: 'fab', label: 'WhatsApp' },
  { href: '#', icon: 'linkedin', pack: 'fab', label: 'LinkedIn' },
  { href: '#', icon: 'instagram', pack: 'fab', label: 'Instagram' },
];
---

<footer class="bg-background-dark text-text-dark">
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center md:text-left">

      <div class="flex flex-col items-center md:items-start gap-4">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center text-background-dark font-brand font-extrabold text-xl">
            W
          </div>
          <h2 class="text-2xl font-brand font-extrabold tracking-tighter">{SITE_DATA.name}</h2>
        </div>
        <p class="text-text-dark/60 font-body max-w-xs">
          Soluciones digitales que crecen contigo.
        </p>
      </div>

      <div>
        <h3 class="font-display font-semibold text-lg mb-4">Navegación</h3>
        <nav class="flex flex-col gap-3">
          {navLinks.map((link) => (
            <a href={link.href} class="text-text-dark/80 hover:text-primary transition-colors">
              {link.text}
            </a>
          ))}
        </nav>
      </div>

      <div>
        <h3 class="font-display font-semibold text-lg mb-4">Contacto</h3>
        <a href={`mailto:${SITE_DATA.email}`} class="block text-text-dark/80 hover:text-primary transition-colors">{SITE_DATA.email}</a>
        <a href={`tel:${SITE_DATA.phone}`} class="block text-text-dark/80 hover:text-primary transition-colors mt-2">{SITE_DATA.phone}</a>
        <div class="flex justify-center md:justify-start items-center gap-4 mt-6">
          {socialLinks.map((link) => (
            <a href={link.href} aria-label={link.label} class="text-text-dark/80 hover:text-primary transition-colors" target="_blank" rel="noopener noreferrer">
              <Icon name={link.icon} pack={link.pack} class="text-2xl" />
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
  <div class="bg-black/20">
    <div class="container mx-auto px-4 py-4 text-center text-sm text-text-dark/50">
      <p>&copy; {new Date().getFullYear()} {SITE_DATA.name}. Hecho en Bolivia con ❤️ y ☕</p>
    </div>
  </div>
</footer>
