---
/**
 * FinalCTA.astro
 * Call-to-action section with gradient background
 * WhatsApp-only contact approach
 */

const whatsappUrl =
	"https://wa.me/59171531944?text=Hola%20Ignova%2C%20quiero%20hablar%20sobre%20un%20proyecto%20de%20software";
---

<section class="relative py-24 md:py-32 overflow-hidden">
	<!-- Gradient Background -->
	<div class="absolute inset-0 bg-gradient-to-br from-primary to-secondary">
	</div>

	<!-- Pattern Overlay -->
	<div class="absolute inset-0 opacity-10">
		<div
			class="absolute inset-0"
			style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"
		>
		</div>
	</div>

	<div class="container mx-auto px-4 relative z-10 text-center">
		<div class="max-w-3xl mx-auto">
			<!-- Icon -->
			<div
				class="w-20 h-20 mx-auto mb-8 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="w-10 h-10 text-white"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M13 10V3L4 14h7v7l9-11h-7z"></path>
				</svg>
			</div>

			<!-- Heading -->
			<h2
				class="text-3xl md:text-5xl font-hoves font-bold text-white mb-6"
			>
				¿Tienes un proyecto en mente?
			</h2>

			<!-- Description -->
			<p class="text-lg md:text-xl text-white/80 font-inter mb-10">
				Nos encantaría escucharte. Cada gran proyecto comienza con una
				buena charla.
				<strong class="text-white"
					>Sin compromiso y sin jerga técnica.</strong
				>
			</p>

			<!-- WhatsApp CTA -->
			<a
				href={whatsappUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center gap-3 px-10 py-5 rounded-full bg-white text-ignova-dark font-bold text-lg hover:bg-ignova-light hover:scale-105 transition-all duration-300 shadow-2xl"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					fill="currentColor"
					class="w-6 h-6 text-[#25D366]"
				>
					<path
						d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
					></path>
				</svg>
				Escríbenos por WhatsApp
			</a>

			<!-- Tagline -->
			<p class="mt-10 text-white/60 font-ailerion text-lg italic">
				"Desarrollo que escala contigo."
			</p>
		</div>
	</div>
</section>
