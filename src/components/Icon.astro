---
interface Props {
  name: string;
  class?: string;
  pack?: 'fas' | 'far' | 'fab';
  'aria-label'?: string;
}

const {
  name,
  class: className,
  pack = 'material',
  'aria-label': ariaLabel,
  ...rest
} = Astro.props;

const iconClass = pack === 'material' ? 'material-symbols-outlined' : `${pack} fa-${name}`;
---
{pack === 'material' ? (
  <span
    class:list={[iconClass, className]}
    aria-hidden={ariaLabel ? undefined : 'true'}
    aria-label={ariaLabel}
    {...rest}
  >
    {name}
  </span>
) : (
  <i
    class:list={[iconClass, className]}
    aria-hidden={ariaLabel ? undefined : 'true'}
    aria-label={ariaLabel}
    {...rest}
  ></i>
)}
