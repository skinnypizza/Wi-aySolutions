---
// src/components/Icon.astro
interface Props {
  name: string;
  class?: string;
  'aria-label'?: string;
  isMaterial?: boolean;
}

const {
  name,
  class: className,
  'aria-label': ariaLabel,
  ...rest
} = Astro.props;
---

<span
  class:list={['material-symbols-outlined', className]}
  aria-hidden={ariaLabel ? undefined : 'true'}
  aria-label={ariaLabel}
  {...rest}
>
  {name}
</span>
