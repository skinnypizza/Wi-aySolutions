---
/**
 * Header.astro
 * Main navigation header for Ignova website
 * Features: Ignova logo, navigation links, WhatsApp CTA
 */

// Navigation links - /contact removed, WhatsApp is the only contact method
const navLinks = [
	{ href: "/services", text: "Servicios" },
	{ href: "/about", text: "Nosotros" },
];

const whatsappUrl =
	"https://wa.me/59171531944?text=Hola%20Ignova%2C%20quiero%20hablar%20sobre%20un%20proyecto%20de%20software";
---

<header
	x-data="{ open: false }"
	@click.away="open = false"
	class="sticky top-0 z-50 w-full bg-ignova-dark/95 backdrop-blur-lg border-b border-ignova-light/10"
>
	<div class="container mx-auto px-4">
		<div class="flex items-center justify-between h-20">
			<!-- Logo -->
			<a href="/" class="flex items-center gap-3 group">
				<img
					src="/ignova-icon.svg"
					alt="Ignova Icon"
					class="w-12 h-12 group-hover:scale-110 transition-transform duration-300"
				/>
				<div class="flex flex-col">
					<span
						class="text-xl font-hoves font-black text-ignova-light tracking-tight"
					>
						ignova
					</span>
					<span
						class="text-[10px] font-ailerion text-ignova-gray uppercase tracking-widest hidden sm:block"
					>
						Desarrollo de Software
					</span>
				</div>
			</a>

			<!-- Desktop Navigation -->
			<nav class="hidden md:flex items-center gap-8">
				{
					navLinks.map((link) => (
						<a
							href={link.href}
							class="font-inter text-sm font-medium text-ignova-light/80 hover:text-primary transition-colors duration-300"
						>
							{link.text}
						</a>
					))
				}
				<a
					href={whatsappUrl}
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-gradient-to-r from-primary to-secondary text-white font-semibold text-sm hover:opacity-90 hover:scale-105 transition-all duration-300 shadow-lg shadow-primary/20"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						fill="currentColor"
						class="w-4 h-4"
					>
						<path
							d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
						></path>
					</svg>
					Contáctanos
				</a>
			</nav>

			<!-- Mobile Menu Button -->
			<div class="md:hidden">
				<button
					@click="open = !open"
					class="p-2 rounded-lg text-ignova-light hover:bg-ignova-light/10 focus:outline-none focus:ring-2 focus:ring-primary transition-colors"
					aria-label="Abrir menú de navegación"
				>
					<svg
						x-show="!open"
						xmlns="http://www.w3.org/2000/svg"
						class="h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
					<svg
						x-show="open"
						xmlns="http://www.w3.org/2000/svg"
						class="h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
						style="display: none;"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
		</div>
	</div>

	<!-- Mobile Menu Panel -->
	<div
		x-show="open"
		x-transition:enter="transition ease-out duration-300"
		x-transition:enter-start="opacity-0 -translate-y-4"
		x-transition:enter-end="opacity-100 translate-y-0"
		x-transition:leave="transition ease-in duration-200"
		x-transition:leave-start="opacity-100 translate-y-0"
		x-transition:leave-end="opacity-0 -translate-y-4"
		class="md:hidden absolute top-full left-0 w-full bg-ignova-dark border-t border-ignova-light/10 shadow-xl"
		style="display: none;"
	>
		<nav class="flex flex-col p-4 gap-2">
			{
				navLinks.map((link) => (
					<a
						href={link.href}
						class="px-4 py-3 text-lg font-inter rounded-lg text-ignova-light/80 hover:bg-primary/10 hover:text-primary transition-colors duration-200"
					>
						{link.text}
					</a>
				))
			}
			<div class="border-t border-ignova-light/10 my-2"></div>
			<a
				href={whatsappUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center justify-center gap-2 px-4 py-3 rounded-lg bg-gradient-to-r from-primary to-secondary text-white font-semibold"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					fill="currentColor"
					class="w-5 h-5"
				>
					<path
						d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
					></path>
				</svg>
				Contáctanos por WhatsApp
			</a>
		</nav>
	</div>
</header>
