---
// src/components/Button.astro
import { cva, type VariantProps } from 'class-variance-authority';

const button = cva(
  'inline-flex items-center justify-center font-body font-bold rounded-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 transform hover:scale-[1.03]',
  {
    variants: {
      variant: {
        primary: 'bg-primary text-text-dark hover:bg-opacity-90 focus:ring-primary',
        secondary: 'bg-secondary text-text-dark hover:bg-opacity-90 focus:ring-secondary',
        outline: 'bg-transparent border-2 border-primary text-primary hover:bg-primary hover:text-text-dark focus:ring-primary',
      },
      size: {
        sm: 'h-10 px-4 text-sm',
        md: 'h-12 px-6 text-base',
        lg: 'h-14 px-8 text-lg',
      },
    },
    defaultVariants: {
      variant: 'primary',
      size: 'md',
    },
  }
);

interface Props extends VariantProps<typeof button> {
  href: string;
  class?: string;
  'aria-label'?: string;
}

const { href, variant, size, class: className, ...rest } = Astro.props;
---

<a href={href} class:list={[button({ variant, size }), className]} {...rest}>
  <slot />
</a>
