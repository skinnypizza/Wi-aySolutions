---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

// Google Fonts del Moodboard
import "@fontsource/manrope/400.css";
import "@fontsource/manrope/500.css";
import "@fontsource/source-sans-3/400.css";
import "@fontsource/source-sans-3/500.css";
import "@fontsource/source-sans-3/600.css";
// NEW: Importación de Nunito Sans para el Logo/Marca (Peso 800)
import "@fontsource/nunito-sans/800.css";

// Iconos que usaremos (Google Material Symbols)
import "material-symbols/outlined.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="light scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Wiñay Tech - Soluciones que crecen contigo"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Font Awesome para logos de marcas -->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
		/>
		<ViewTransitions />
	</head>
	<body
		class="bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark font-body antialiased"
	>
		<Header />

		<main class="flex-grow">
			<slot />
		</main>

		<Footer />

		<script type="module" src="../scripts/alpine.js"></script>

		<style is:global>
			/* Estilos globales de las fuentes */
			h1,
			h2,
			h3,
			h4,
			h5,
			h6,
			.font-display {
				font-family: "Source Sans 3", sans-serif;
			}
			/* NEW: Clase específica para el Logo/Marca (Logotipo/Marca: Nunito Sans 800 ) */
			.font-brand {
				font-family: "Nunito Sans", sans-serif;
			}

			/* Animación de entrada global (para usar en todos los componentes) */
			@keyframes fade-in-up {
				from {
					opacity: 0;
					transform: translateY(20px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
		</style>
	</body>
</html>
