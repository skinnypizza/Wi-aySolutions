---
import Layout from '../layouts/Layout.astro';
import ServiceGrid from '../components/ServiceGrid.astro';
---
<Layout title="Servicios | Wiñay Tech">
    <div class="p-4 md:p-8">
        <div class="max-w-6xl mx-auto">
            <!-- Cabecera -->
            <header class="text-center mb-12">
                <div class="mb-4 inline-block p-2 bg-blue-50 rounded-2xl">
                    <span class="text-blue-600 font-bold tracking-widest uppercase text-xs">Wiñay Software</span>
                </div>
                <h1 class="text-4xl font-extrabold text-gray-800 mb-2">Planes y Servicios a tu Medida</h1>
                <p class="text-gray-500 font-medium">Soluciones claras y sin sorpresas, pensadas para el mercado de Bolivia y LATAM.</p>
            </header>

            <ServiceGrid />

        </div>
    </div>
</Layout>
