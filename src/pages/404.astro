---
/**
 * 404.astro
 * Custom 404 page with Ignova branding
 */
import Layout from "../layouts/Layout.astro";

const whatsappUrl =
  "https://wa.me/59171531944?text=Hola%20Ignova%2C%20quiero%20hablar%20sobre%20un%20proyecto%20de%20software";
---

<Layout title="404 | Ignova">
  <section
    class="min-h-[80vh] flex items-center justify-center bg-ignova-dark relative overflow-hidden"
  >
    <!-- Background effects -->
    <div
      class="absolute top-20 left-10 w-72 h-72 bg-primary/10 rounded-full blur-[100px]"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-72 h-72 bg-secondary/10 rounded-full blur-[100px]"
    >
    </div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <div
        class="text-8xl md:text-9xl font-hoves font-black bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent mb-6"
      >
        404
      </div>
      <h1
        class="text-2xl md:text-4xl font-hoves font-bold text-ignova-light mb-4"
      >
        Página no encontrada
      </h1>
      <p class="text-lg text-ignova-light/60 font-inter mb-8 max-w-md mx-auto">
        La página que buscas no existe o ha sido movida. ¿Quieres hablar con
        nosotros?
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-gradient-to-r from-primary to-secondary text-white font-semibold hover:opacity-90 transition-all"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
            ></path>
          </svg>
          Ir al Inicio
        </a>
        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full border-2 border-ignova-light/20 text-ignova-light font-semibold hover:border-primary hover:text-primary transition-all"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
            ></path>
          </svg>
          Contáctanos
        </a>
      </div>
    </div>
  </section>
</Layout>
